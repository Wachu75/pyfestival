#: include shapebutton.kv
#: include picture.kv
#: include pictureview.kv


<Cookie>:
    canvas.before:
        Color:
            rgb: (0.7,0.7,0.7)
        Rectangle:
            size: self.width, self.height
            pos: self.x, self.y

    PictureView:
        id: picture_view
        size_hint: 0.46, 0.8
        pos_hint: {'x': 0.02, 'y': 0.02}
        Picture:
            id: picture
            source: 'img/s9.png'
    Widget:
        size_hint: 0.46, 0.8
        pos_hint: {'x': 0.52, 'y': 0.02}
        canvas:
            Color:
                rgb: (0,0.5,0.5)
            Rectangle:
                size: self.width, self.height
                pos: self.x, self.y

    BoxLayout:
        size_hint: 0.46, 0.14
        pos_hint: {'x': 0.02, 'y': 0.84}
        spacing: 5
        padding: 2,2,2,2
        canvas:
            Color:
                rgb: (1,1,1)
            Rectangle:
                size: self.width, self.height
                pos: self.x, self.y
        ShapeButton:
            id: line_button
            name: 'line'
            background_normal: "img/s9.png"
            background_down: "img/s7.ipg"
            on_release: root.shape_button_click(self)

        ShapeButton:
            id: rectangle_button
            name: 'rectangle'
            text: "Rectangle"
            on_release: root.shape_button_click(self)

        ShapeButton:
            id: circle_button
            name: 'circle'
            text: "Circle"
            on_release: root.shape_button_click(self)

        ShapeButton:
            id: freeform_button
            name: 'freeform'
            text: "FreeForm"
            on_release: root.shape_button_click(self)


    BoxLayout:
        size_hint: 0.46, 0.14
        pos_hint: {'x': 0.52, 'y': 0.84}
        spacing: 5
        padding: 2,2,2,2
        canvas:
            Color:
                rgb: (0.2,0,0.2)
            Rectangle:
                size: self.width, self.height
                pos: self.x, self.y
        Widget:
            canvas:
                Color:
                    rgb: (1,0,0)
                Rectangle:
                    size: self.width, self.height
                    pos: self.x, self.y
        Widget:
            canvas:
                Color:
                    rgb: (1,0,0)
                Rectangle:
                    size: self.width, self.height
                    pos: self.x, self.y
        Widget:
            canvas:
                Color:
                    rgb: (1,0,0)
                Rectangle:
                    size: self.width, self.height
                    pos: self.x, self.y